<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApartadoAulas</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ApartadoAulas.styles.css" asp-append-version="true" />
</head>
<body>
        <header class="py-3">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light " id="cabecera">
                    <a class="navbar-brand" href="#"><img src="/img/uts.png" alt="Logo"></a>
                    <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" asp-action="Listar" asp-controller="Edificio" style="color:black;">Edificios</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" asp-action="ListarInstalaciones" asp-controller="Instalacion" style="color:black;">Instalaciones</a>
                            </li>
                            <li class="nav-item">
                            <a href="#" class="nav-link" style="color:black;">Acerca de nosotros</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>


        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        @* <footer class="footer mt-5 py-3">
            <div class="container text-center">
                <p> &copy; 2023 UTS Todos los derechos reservados</p>
            </div>
        </footer> *@

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </body>
</html>
