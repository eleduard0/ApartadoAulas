@model List<EdificioModel>;
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-header">
    Lista de Conctactos
</div>
<div class="card-body">
    <a asp-action="Listar" asp-controller="Instalacion" class="btn btn-primary btn-sn">Crear Nuevo</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripcion</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem=>item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem=>item.Descripcion)</td>


                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

