@model ApartadoAulas.Models.ProfesorModel;

@{
    ViewData["Title"] = "Guardar Profesor";
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}

@{
    ViewData["Title"] = "Registro";
}


    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h3 class="text-center mb-4 ">Registrarse</h3>
            <form asp-action="Registro" asp-controller="LoginR" method="post">
                <div class="form-group">
                    <label class="form-label" for="name">Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Apellido Paterno</label>
                    <input type="text" asp-for="ApePa" class="form-control" placeholder="Ingresa tu apellido paterno" />
                    <span asp-validation-for="ApePa" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label">Apellido Materno</label>
                    <input type="text" asp-for="ApeMa" class="form-control" placeholder="Ingresa tu apellido materno" />
                    <span asp-validation-for="ApeMa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Ingresa tu correo electrónico">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" asp-for="Contrasenia" class="form-control"  placeholder="Ingresa tu contraseña" >
                    <span asp-validation-for="Contrasenia" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Carrera</label>
                    <select asp-for="refCarrera.IdCarrera" class="form-control"
                            asp-items="@(ViewBag.ListaCarreras != null ? new SelectList(ViewBag.ListaCarreras, "Value", "Text") : new List<SelectListItem>())">
                        <option value="">Seleccione la Carrera</option>
                    </select>
                </div>

                <button type="submit" class="btn  btn-block" id="button">Registrarse</button>
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger mt-3" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }
            </form>
        </div>
    </div>

