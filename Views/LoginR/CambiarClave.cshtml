@model ApartadoAulas.Models.ProfesorModel;
@{
    ViewData["Title"] = "CambiarClave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h4 class="mb-0">Cambiar Contraseña</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="LoginR" asp-action="CambiarClave" method="post">
                       
                        <div class="form-group">
                            <label for="email">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="example@gmail.com" required name="correo">
                        </div>
                        <div class="form-group">
                            <label for="password">Nueva Contraseña</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Nueva Contraseña" required name="clave">
                        </div>

                        <button type="submit" class="btn btn-primary">Cambiar Contraseña</button>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>

                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

