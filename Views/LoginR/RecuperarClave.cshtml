
@{
    ViewData["Title"] = "RecuperarClave";
    Layout = "~/Views/Shared/_LayoutInicio.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h3 class="text-center mb-4">¿Has olvidado tu contraseña?</h3>
        <form>
            <div class="form-group">
                <label for="email">Correo electrónico</label>
                <input type="email" class="form-control" id="email" placeholder="Ingresa tu correo electrónico" required>
            </div>
            <button type="submit" class="btn  btn-block" id="button">Recuperar Contraseña</button>
        </form>
    </div>
</div>

