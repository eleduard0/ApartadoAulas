@model ApartadoAulas.Models.ProfesorModel;
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>
<div class="row justify-content-center">
    <div class="col-12 col-dm-6">
        <div class="card-header">
            Actualizar informacion de Profesor
        </div>
        <div class="card-body">

            <form asp-action="Editar" asp-controller="Profesor" method="post">
                <input type="hidden" asp-for="IdProfesor" />

                <div class="col-md-4 form-check group mb3">
                    <label class="form-label">Nombre</label>
                    <input type="text" asp-for="Nombre" class="form-control" />
                </div>

                <div class="col-md-4 form-check group mb3">
                    <label class="form-label">Apellido Paterno</label>
                    <input type="text" asp-for="ApePa" class="form-control" />
                </div>
                <div class="col-md-4 form-check group mb3">
                    <label class="form-label">Apellido Materno</label>
                    <input type="text" asp-for="ApeMa" class="form-control" />
                </div>
                <div class="col-md-4 form-check group mb3">
                    <label class="form-label">Correo Electronico</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>

                <div class="col-md-4 form-check group mb3">
                    <label class="form-label">Carrera</label>
                    <select asp-for="refCarrera.IdCarrera" class="form-control"
                            asp-items="@(ViewBag.Lista!=null?new SelectList(ViewBag.Lista,"Value","Text"):new List<SelectListItem>())">
                        <option value="">Seleccione la carrera</option>
                    </select>
                </div>

                <div class="col-md-4 mb3">
                    <button type="submit" class="btn btn-primary mb-3">Guardar Cambios</button>
                    <a asp-action="ListarProfesor" asp-controller="Profesor" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

